<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    tools:context=".Question">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points :"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/point2"
        android:layout_width="187dp"
        android:layout_height="29dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="155dp"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:text="Who scored the maximum runs in World Cup 2011?"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/opt21"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="Question"
        android:tag="1"
        android:text=" Tillakaratne Dilshan" />

    <Button
        android:id="@+id/opt23"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/opt22"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="Question"
        android:tag="3"
        android:text=" Kumar Sangakkara" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="144dp"
        android:layout_height="47dp"
        android:layout_above="@+id/q2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-155dp"
        android:background="#455154"
        android:gravity="center"
        android:text=" Question 2"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/opt23"
        android:background="@android:color/holo_blue_light"
        android:onClick="Question"
        android:tag="4"
        android:text=" Gautam Gambhir" />

    <Button
        android:id="@+id/opt22"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/opt21"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="Question"
        android:tag="2"
        android:text="Sachin Tendulkar " />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_orange_dark"
        android:onClick="Next"
        android:text="Next" />
</RelativeLayout>



